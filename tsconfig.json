{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["frontend/src/*"],
            "@/*": ["frontend/src/*"]
        }
    },
    "include": [
        "frontend/src/**/*.ts",
        "frontend/src/**/*.tsx",
        "frontend/src/**/*.vue",
    ],  
    "exclude": ["frontend/node_modules"]
}